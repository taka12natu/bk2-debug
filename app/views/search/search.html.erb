<div class="row">
<div class="col-xs-11 col-xs-offset-1">


<% if @range == "book_range" %>

		<h2>Books search for '<%= @word %>'</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% if @book.present? %>
					<% @book.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user) do %>
								<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", size:'50x50') %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				<% else %>
					<p>nothing</p>
				<% end %>
			</tbody>
		</table>

<% elsif @range == "user_range" %>

		<h2>Users search for '<%= @word %>'</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% if @user.present? %>
					<% @user.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", size:'50x50') %></td>
						<td><%= user.name %></td>
						<td>following: <%= user.followings.count %></td>
						<td>follower: <%= user.followers.count%></td>
						<td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				<% else %>
					<p>nothing</p>
				<% end %>
			</tbody>
		</table>
<% end %>

</div>
</div>
