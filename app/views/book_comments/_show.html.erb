<% book.book_comments.each do |book_comment| %>
	<ul>
		<%= link_to user_path(book_comment.user) do %>
			<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", size:'50x50') %>
		<% end %>

		<%= book_comment.comment %>

		<% if book_comment.user == current_user %>
			<%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
		<% end %>
	</ul>
<% end %>
