<script src="http://maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY']%>&callback=initMap" async defer></script>

<style>
#map {
		height: 500px;
		width: 100%;
		margin-top:20px;
	}
</style>

<div id="map"></div>

<script>

function initMap(){
	var user_address = {lat: <%= @user.latitude %>, lng: <%= @user.longitude %>};

  	var map = new google.maps.Map(document.getElementById('map'), {
    		center: user_address,
    		zoom: 12,
  	});

 	var marker = new google.maps.Marker({
    	position: user_address,
    	map: map
  	});
}
    </script>
