
<% @user_rooms.each do |e| %>
	<% if e.user.id != current_user.id %>
		<h2>Chat with <strong><%= e.user.name %></strong></h2>
	<% end %>
<% end %>

<hr>
<% if @chats.present? %>
	<div id="chat-list">
		<%= render 'chat_list', chats: @chats %>
	</div>
<% else %>
  	<h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<div id="chat-form">
	<%= render 'chat_form', {room: @room, chat: @chat} %>
</div>

<div id="margin">
	<%= link_to "戻る", users_path %>
</div>